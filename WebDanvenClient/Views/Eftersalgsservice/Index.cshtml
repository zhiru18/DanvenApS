
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Styles.Render("~/Content/Eftersalgsservice.css")
<body>
    <div class="left">
        <h3 style="color:white">Eftersalgsservice</h3>
        <div class="topLeft">
            <br />
            <br />
            <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" runat="server"
                    style=" background-color:black; width:155px;height:35px" onclick="location.href='@Url.Action("Eftersalgsservice", "Home", new {Id = 1})'">
                Result promise
            </button>
            <br />
            <br />
            <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" runat="server"
                    style=" background-color:black; width:155px;height:35px" onclick="location.href='@Url.Action("Eftersalgsservice", "Home", new {Id = 2})'">
                Service guarantee
            </button>
            <br />
            <br />
            <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" runat="server"
                    style=" background-color:black;  width:155px;height:35px" onclick="location.href='@Url.Action("Index", "Eftersalgsservice")'">
                Repair application
            </button>
        </div>
    </div>
    <div class="right">
        
        <br>
       
            <form action="/Eftersalgsservice/Index" name="repairForm" id="repairForm" method="post">
                <table width="80%" border="0" bordercolorlight="#000000" bordercolordark="#FFFFFF" bgcolor="#CCFFCC" cellpadding="4" align="left">
                    <tr>
                        <td colspan="2"> <div align="left"><label>1. Generator identification</label></div> </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>  Type number: </td>
                        <td><input type="text" name="typeNumber" id="typeNumber" value="@Request["typeNumber"]" /> </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>  Serial number: </td>
                        <td>
                            <input type="text" name="serialNumber1" id="serialNumber1" value="@Request["serialNumber1"]" />
                        </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>  Running hours:</td>
                        <td>
                            <input type="text" name="runningHours" id="runningHours" value="@Request["runningHours"]" />
                        </td>
                    </tr>
                    <tr>
                        <td> Installation date: </td>
                        <td>
                            <input type="text" name="installationDate" id="installationDate" value="@Request["installationDate"]" />
                        </td>
                    </tr>
                    <tr>
                        <td> Application:</td>
                        <td>
                            <input type="text" name="application" id="application" value="@Request["application"]"/>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2"> <div align="left"><label>2. Product identification</label></div> </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>   Product type: </td>
                        <td>   <input type="text" name="productType" id="productType" value="@Request["productType"]" /> </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>  Serial number: </td>
                        <td>  <input type="text" name="serialNumber2" id="serialNumbe2" value="@Request["serialNumber2"]"  /> </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>   Invoice number: </td>
                        <td>  <input type="text" name="invoiceNumber" id="invoiceNumber" value="@Request["invoiceNumber"]"/></td>
                    </tr>

                    <tr>
                        <td colspan="2"> <div align="left"><label><span style="color:red;">* </span>3. Error description / reason for return</label></div> </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="text" name="descriptionReason" id="descriptionReason" value="@Request["descriptionReason"]" style="width:2000px; height:100px"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"> <div align="left"><label> 4. Additional information</label></div> </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="text" name="additionalInformation" id="additionalInformation" value="@Request["additionalInformation"]" style="width:2000px; height:100px" />
      
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"> <div align="left"><label>  5. Customer data</label></div> </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span>  Company name: </td>
                        <td>   <input type="text" name="companyName" id="companyName" value="@Request["companyName"]" /> </td>
                    </tr>
                    <tr>
                        <td> Address: </td>
                        <td>
                            <input type="text" name="address" id="address" value="@Request["address"]" />
                        </td>
                    </tr>
                    <tr>
                        <td> Company contact: </td>
                        <td>
                            <input type="text" name="companyContact" id="companyContact" value="@Request["companyContact"]" />
                        </td>
                    </tr>
                    <tr>
                        <td> Email: </td>
                        <td>
                            <input type="text" name="email" id="email" value="@Request["email"]"/>
                        </td>
                    </tr>
                    <tr>
                        <td> <span style="color:red;">* </span> Tel. (direct): </td>
                        <td>   <input type="text" name="telephoneNo" id="telephoneNo" value="@Request["telephoneNo"]" /></td>
                    </tr>
                    <tr>
                        <td>  </td>
                        <td>  </td>
                    </tr>
                </table>
                <br />
                <br />
                <input type="submit" value="submit" class="button" style="position:relative; top:20PX; bottom:20px" />
                <br />
                <br />
            </form>
        @if (ViewBag.Message != null) {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                };
            </script>
        }
</div>
</body>

